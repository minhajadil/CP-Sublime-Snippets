const int  N = 1e6 ;
vector<int>adj[N] ;
 
bool vis[N] ;
int l[N] ;
 
void bfs(int v)
{
  queue<int> q ;
  q.push(v) ;
  vis[v]= true ;
  l[v]=0 ;
 
  while(!q.empty())
  {
    int cur = q.front() ;
    q.pop() ;
 
    for(int n : adj[cur])
    {
     if(!vis[n])
     { q.push(n) ;
      vis[n]= true ;
      l[n]= l[cur]+1 ;
    }
    }
 
  } 
}
]]></content>
